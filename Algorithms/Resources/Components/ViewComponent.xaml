<UserControl x:Class="Algorithms.Resources.Components.ViewComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Algorithms.Resources.Components"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Border Style="{StaticResource ComponentBorder}">
        <Expander Header="Область просмотра">
            <Grid VerticalAlignment="Top" Height="100">
                <CheckBox Margin="10" IsChecked="{Binding Algorithm.ShowInfo}"
                          Foreground="{DynamicResource PrimaryTextColor}"
                          IsTabStop="False" Padding="10,-4,0,0"
                          Content="Показывать информацию"/>
            </Grid>
        </Expander>
    </Border>
</UserControl>
